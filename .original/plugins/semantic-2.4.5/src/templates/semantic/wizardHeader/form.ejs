<nav aria-label="navigation" id="{{ ctx.wizardKey }}-header">
  <div class="ui steps">
    {% ctx.panels.forEach(function(panel, index) { %}
    <a class="{{ctx.currentPage === index ? ' active' : ''}} step" ref="{{ctx.wizardKey}}-link">
      <div class="content">
        <div class="title">{{panel.title}}</div>
      </div>
    </a>
    {% }) %}
  </div>
</nav>
